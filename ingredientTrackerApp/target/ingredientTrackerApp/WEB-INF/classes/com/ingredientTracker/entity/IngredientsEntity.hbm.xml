<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ingredientTracker.entity.IngredientsEntity" table="Ingredients" schema="IngredientTracker">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="name">
            <column name="ingredientName" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="quantity">
            <column name="ingredientQuantity" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>